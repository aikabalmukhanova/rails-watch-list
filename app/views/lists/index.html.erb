<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1478720568477-152d9b164e26?q=80&w=2940&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D);">
  <div class="container text-center">
    <h1>Save your movies to watch:</h1>
  </div>
</div>

<div class="container px-4">
  <h3 class="text-light fw-bold mt-4 text-center">My Lists</h3>

  <hr>

  <div class="row g-2">
    <% @lists.each do |list| %>
      <div class="col-lg-3 col-md-4 col-sm-6">
        <div class="card h-100 d-flex justify-content-center" style="background-image:linear-gradient(rgba(0,0,0,0.1),rgba(0,0,0,0.1)), url(<%= asset_path('popcorn.avif') %>); background-size: cover">
          <div class="card-body d-flex flex-column align-items-center">
            <%= link_to list.name, list_path(list), class: "text-decoration-none text-light fs-5 fw-bold"%>
            <%= link_to '🗑️', list_path(list.id), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn m-0 p-0" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<%= link_to 'Create a movie list', new_list_path, class: "btn btn-dark fw-bold mt-4" %>
</div>
